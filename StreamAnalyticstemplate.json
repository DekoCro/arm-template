{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "Namespace": {
            "minLength": 6,
            "maxLength": 50,
            "type": "string",
            "metadata": {
                "description": "Use Event Hub Namespace."
            }
        },
        "Account": {
            "minLength": 2,
            "maxLength": 50,
            "type": "string",
            "metadata": {
                "description": "Use your company name."
            }
        },
        "EventHub": {
            "minLength": 2,
            "maxLength": 50,
            "type": "string",
            "metadata": {
                "description": "Use Event Hub instance name."
            }
        },
        "ProcessingTier": {
            "defaultValue": "Basic",
            "allowedValues": [ "Basic", "Standard"],
            "type": "string",
            "metadata": {
                "description": "Specifies the messaging tier for service Bus namespace."
            }
        },
        "StreamingJobs": {
            "type": "string",
            "metadata": {
                "description": "Name for the streaming analysis job."
            }
        },
        "StreamInput": {
            "type": "string",
            "metadata": {
                "description": "Name for the stream input."
            }
        },
        "StreamOutput": {
            "type": "string",
            "metadata": {
                "description": "Name for the stream output."
            }
        }
    },
    "variables": {
        "location": "[resourceGroup().location]"
    },
    "resources": [
        {
            "type": "Microsoft.EventHub/namespaces",
            "apiVersion": "2018-01-01-preview",
            "name": "[parameters('Namespace')]",
            "location": "[variables('location')]",
            "sku": {
                "name": "[parameters('ProcessingTier')]",
                "tier": "[parameters('ProcessingTier')]",
                "capacity": 1
            },
            "properties": {
                "zoneRedundant": false,
                "isAutoInflateEnabled": false,
                "maximumThroughputUnits": 0,
                "kafkaEnabled": false
            }
        },
        {
            "type": "Microsoft.StreamAnalytics/streamingjobs",
            "apiVersion": "2016-03-01",
            "name": "[parameters('StreamingJobs')]",
            "location": "[variables('location')]",
            "properties": {
                "sku": {
                    "name": "Standard" // TODO
                },
                "outputStartMode": "JobStartTime",
                "outputStartTime": "",
                "eventsOutOfOrderPolicy": "Adjust",
                "outputErrorPolicy": "Stop",
                "eventsOutOfOrderMaxDelayInSeconds": 0,
                "eventsLateArrivalMaxDelayInSeconds": 5,
                "dataLocale": "en-US",
                "compatibilityLevel": "1.1"
            }
        },
        {
            "type": "Microsoft.EventHub/namespaces/AuthorizationRules",
            "apiVersion": "2017-04-01",
            "name": "[concat(parameters('Namespace'), '/RootManageSharedAccessKey')]",
            "location": "[variables('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.EventHub/namespaces', parameters('Namespace'))]"
            ],
            "properties": {
                "rights": [
                    "Listen",
                    "Manage",
                    "Send"
                ]
            }
        },
        {
            "type": "Microsoft.EventHub/namespaces/eventhubs",
            "apiVersion": "2017-04-01",
            "name": "[concat(parameters('Namespace'), '/', parameters('EventHub'))]",
            "location": "[variables('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.EventHub/namespaces', parameters('Namespace'))]"
            ],
            "properties": {
                "messageRetentionInDays": 1,
                "partitionCount": 2,
                "status": "Active"
            }
        },
        {
            "type": "Microsoft.EventHub/namespaces/networkRuleSets",
            "apiVersion": "2018-01-01-preview",
            "name": "[concat(parameters('Namespace'), '/default')]",
            "location": "[variables('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.EventHub/namespaces', parameters('Namespace'))]"
            ],
            "properties": {
                "defaultAction": "Deny",
                "virtualNetworkRules": [],
                "ipRules": []
            }
        },
        {
            "type": "Microsoft.StreamAnalytics/streamingjobs/inputs",
            "apiVersion": "2016-03-01",
            "name": "[concat(parameters('StreamingJobs'), '/', parameters('StreamInput'))]",
            "dependsOn": [
                "[resourceId('Microsoft.StreamAnalytics/streamingjobs', parameters('StreamingJobs'))]"
            ],
            "properties": {
                "type": "Stream",
                "datasource": {
                    "type": "Microsoft.ServiceBus/EventHub",
                    "properties": {
                        "eventHubName": "[parameters('EventHub')]",
                        "serviceBusNamespace": "[parameters('Namespace')]",
                        "sharedAccessPolicyName": "[parameters('Account')]"
                    }
                },
                "compression": {
                    "type": "None"
                },
                "partitionKey": "",
                "serialization": {
                    "type": "Json",
                    "properties": {
                        "encoding": "UTF8"
                    }
                },
                "etag": "ccb2c68a-0342-44de-93e8-bbd149e04065" // TODO
            }
        },
        {
            "type": "Microsoft.StreamAnalytics/streamingjobs/outputs",
            "apiVersion": "2016-03-01",
            "name": "[concat(parameters('StreamingJobs'), '/', parameters('StreamOutput'))]",
            "dependsOn": [
                "[resourceId('Microsoft.StreamAnalytics/streamingjobs', parameters('StreamingJobs'))]"
            ],
            "properties": {
                "datasource": {
                    "type": "Microsoft.ServiceBus/EventHub",
                    "properties": {
                        "propertyColumns": [],
                        "eventHubName": "[parameters('EventHub')]",
                        "serviceBusNamespace": "[parameters('Namespace')]",
                        "sharedAccessPolicyName": "[parameters('Account')]"
                    }
                },
                "serialization": {
                    "type": "Json",
                    "properties": {
                        "encoding": "UTF8",
                        "format": "LineSeparated"
                    }
                }
            }
        },
        {
            "type": "Microsoft.EventHub/namespaces/eventhubs/authorizationRules",
            "apiVersion": "2017-04-01",
            "name": "[concat(parameters('Namespace'), '/', parameters('EventHub'), '/', parameters('Account'))]",
            "location": "[variables('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.EventHub/namespaces/eventhubs', parameters('Namespace'), parameters('EventHub'))]",
                "[resourceId('Microsoft.EventHub/namespaces', parameters('Namespace'))]"
            ],
            "properties": {
                "rights": [
                    "Send"
                ]
            }
        },
        {
            "type": "Microsoft.EventHub/namespaces/eventhubs/consumergroups",
            "apiVersion": "2017-04-01",
            "name": "[concat(parameters('Namespace'), '/', parameters('EventHub'), '/$Default')]",
            "location": "[variables('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.EventHub/namespaces/eventhubs', parameters('Namespace'), parameters('EventHub'))]",
                "[resourceId('Microsoft.EventHub/namespaces', parameters('Namespace'))]"
            ],
            "properties": {}
        }
    ]
}